{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-6 offset-md-3">
    <h4 class="text-center mb-5">Formulaire d'inscription</h4>
    {{ form_start(form) }}
    {{ form_row(form.username, {'label' : 'Nom', 'attr' : {'placeholder' : 'Nom d\'utilisateur...'}}) }}
    {{ form_row(form.email, {'label' : 'Email', 'attr' : {'placeholder' : 'Adresse email...'}}) }}
    {{ form_row(form.password, {'label' : 'Password', 'attr' : {'placeholder' : 'Mot de passe...'}}) }}
    {{ form_row(form.confirm_password, {'label' : 'Password', 'attr' : {'placeholder' : 'Confirmation du mot de passe...'}}) }}
    {{ form_row(form.save, {'label' : 'Inscription sur le site'}) }}
    {{ form_end(form) }}
</div>
{% endblock %}
